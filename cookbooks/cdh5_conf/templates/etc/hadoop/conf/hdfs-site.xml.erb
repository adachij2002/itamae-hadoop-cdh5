<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>

  <!-- NameNode -->
  <property>
    <name>dfs.namenode.name.dir</name>
    <value><%= node['hdfs_site']['dfs_namenode_name_dir'] %></value>
  </property>

  <property>
    <name>dfs.namenode.shared.edits.dir</name>
    <value><%= node['hdfs_site']['dfs_namenode_shared_edits_dir'] %></value>
  </property>

  <property>
    <name>dfs.permissions.superusergroup</name>
    <value>hadoop</value>
  </property>

  <property>
    <name>dfs.replication</name>
    <value><%= node['hdfs_site']['dfs_replication'] %></value>
  </property>

  <property>
    <name>dfs.hosts</name>
    <value>/etc/hadoop/conf/hosts.include</value>
  </property>

  <property>
    <name>dfs.hosts.exclude</name>
    <value>/etc/hadoop/conf/hosts.exclude</value>
  </property>

  <property>
    <name>dfs.support.append</name>
    <value>true</value>
  </property>

  <property>
    <name>dfs.support.broken.append</name>
    <value>true</value>
  </property>

  <!-- NameNode HA -->
  <property>
    <name>dfs.nameservices</name>
    <value>nn-cluster</value>
  </property>

  <property>
    <name>dfs.ha.namenodes.nn-cluster</name>
    <value>nn1,nn2</value>
  </property>

  <property>
    <name>dfs.namenode.rpc-address.nn-cluster.nn1</name>
    <value><%= node['hdfs_site']['dfs_namenode_rpc_address_nn_cluster_nn1'] %></value>
  </property>

  <property>
    <name>dfs.namenode.rpc-address.nn-cluster.nn2</name>
    <value><%= node['hdfs_site']['dfs_namenode_rpc_address_nn_cluster_nn2'] %></value>
  </property>

  <property>
    <name>dfs.namenode.http-address.nn-cluster.nn1</name>
    <value><%= node['hdfs_site']['dfs_namenode_http_address_nn_cluster_nn1'] %></value>
  </property>

  <property>
    <name>dfs.namenode.http-address.nn-cluster.nn2</name>
    <value><%= node['hdfs_site']['dfs_namenode_http_address_nn_cluster_nn2'] %></value>
  </property>

  <property>
    <name>dfs.ha.automatic-failover.enabled</name>
    <value>true</value>
  </property>

  <property>
    <name>dfs.ha.fencing.methods</name>
    <value>sshfence(hdfs:22)</value>
  </property>

  <property>
    <name>dfs.ha.fencing.ssh.private-key-files</name>
    <value>/usr/lib/hadoop-hdfs/.ssh/id_rsa</value>
  </property>

  <property>
    <name>dfs.client.failover.proxy.provider.nn-cluster</name>
    <value>org.apache.hadoop.hdfs.server.namenode.ha.ConfiguredFailoverProxyProvider</value>
  </property>

  <!-- JournalNode -->
  <property>
    <name>dfs.journalnode.edits.dir</name>
    <value><%= node['hdfs_site']['dfs_journalnode_edits_dir'] %></value>
  </property>

  <!-- DataNode -->
  <property>
    <name>dfs.datanode.data.dir</name>
    <value><%= node['hdfs_site']['dfs_datanode_data_dir'] %></value>
  </property>

  <!-- WebHDFS -->
  <property>
    <name>dfs.webhdfs.enabled</name>
    <value>true</value>
  </property>

  <!-- Short-Circuit Local Reads -->
  <property>
    <name>dfs.client.read.shortcircuit</name>
    <value>true</value>
  </property>

  <property>
    <name>dfs.domain.socket.path</name>
    <value>/var/run/hadoop-hdfs/dn._PORT</value>
  </property>

  <!-- ZooKeeper -->
  <property>
    <name>dfs.ha.zkfc.port</name>
    <value>8019</value>
  </property>

</configuration>
