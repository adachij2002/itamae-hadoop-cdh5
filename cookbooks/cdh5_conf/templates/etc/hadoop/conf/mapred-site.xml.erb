<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>

  <!-- YARN (MRv2) -->
  <property>
    <name>mapreduce.framework.name</name>
    <value>yarn</value>
  </property>

  <property>
    <name>mapreduce.map.memory.mb</name>
    <value><%= node['mapred_site']['mapreduce_map_memory_mb'] %></value>
  </property>

  <property>
    <name>mapreduce.reduce.memory.mb</name>
    <value><%= node['mapred_site']['mapreduce_reduce_memory_mb'] %></value>
  </property>

  <!-- YARN Application Master -->
  <property>
    <name>yarn.app.mapreduce.am.staging-dir</name>
    <value><%= node['mapred_site']['yarn_app_mapreduce_am_staging_dir'] %></value>
  </property>

  <!-- YARN JobHistory Server -->
  <property>
    <name>mapreduce.jobhistory.address</name>
    <value><%= node['mapred_site']['mapreduce_jobhistory_address'] %></value>
  </property>

  <property>
    <name>mapreduce.jobhistory.webapp.address</name>
    <value><%= node['mapred_site']['mapreduce_jobhistory_webapp_address'] %></value>
  </property>

</configuration>
